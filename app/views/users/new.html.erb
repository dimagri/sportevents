<h1>Регистрация</h1>

<%= form_for @user do |f| %>
    <% if @user && @user.errors.any? %>
        <div class="error_messages">
          <h2>Возникли ошибки(<%= @user.errors.count %>):</h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li>Поле <%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name, 'Ник' %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email, 'Email' %><br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password, 'Пароль' %><br>
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= submit_tag 'Зарегистрироваться' %>
    </div>
<% end %>