<div>
  <%= form_for(@user) do |f| %>

      <% if @user && @user.errors.any? %>
          <div class="error_messages">
            <h2>Возникли ошибки(<%= @user.errors.count %>):</h2>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                  <li>Поле <%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label 'Логин*' %><br>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label 'Полное имя' %><br>
        <%= f.text_field :full_name %>
      </div>

      <div class="field">
        <%= f.label 'Email' %><br>
        <%= f.text_field :email %>
      </div>

      <div class="field">
        <%= f.label 'Коротко о себе' %><br>
        <%= f.text_area :about %>
      </div>

      <div class="field">
        <%= f.label 'Номер телефона (0*********)' %><br>
        <%= f.text_field :phone %>
      </div>

      <div class="field">
        <%= f.label 'Skype' %><br>
        <%= f.text_field :skype %>
      </div>

      <div class="field">
        <%= f.label 'Ссылка на аватар' %><br>
        <%= f.text_field :avatar_url %>
      </div>

      <div class="actions">
        <%= f.submit 'ОК'%>
      </div>
  <% end %>
</div>