<% if current_user %>
    Привет, <b><%= current_user.name %></b>
    <%= link_to 'Профиль', user_path(current_user) %>
    <%= link_to 'Выйти', logout_path %>
<% else %>
    Войти с помощью:
    <ul>
        <li><%= link_to 'ВК', '/auth/vkontakte' %></li>
        <li><%= link_to 'Фейсбук', '/auth/facebook' %></li>
        <li><%= link_to 'Твиттер', '/auth/twitter' %></li>
    </ul>
    <p>
      <strong>Не используете эти сервисы?</strong>
      Войдите, или <%= link_to 'создайте аккаунт', new_identity_path %>.
      <%= form_tag '/auth/identity/callback' do %>
        <div class="field">
          <%= label_tag :auth_key, 'Email' %><br>
          <%= text_field_tag :auth_key %>
        </div>
        <div class="field">
          <%= label_tag :password, 'Пароль' %><br>
          <%= password_field_tag :password %>
        </div>
        <div class="actions"><%= submit_tag 'Войти' %></div>
    <% end %>
    </p>
<% end %>

<link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css" />

<div id="map" style="height: 400px; width: 600px"></div>

<script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
<script>
    var map = L.map('map').setView([49.437820, 32.058959], 13);

    L.tileLayer('https://{s}.tiles.mapbox.com/v3/{id}/{z}/{x}/{y}.png', {
        maxZoom: 18,
        attribution: 'Карта всех секций',
        id: 'examples.map-i875mjb7'
    }).addTo(map);


    <% for location in Location.all %>
        L.marker(<%= [location.latitude, location.longitude] %>).addTo(map)
                .bindPopup("<b><%= location.club.name %></b><br/>Категория: <%= location.club.type.name %>");
    <% end %>

</script>

