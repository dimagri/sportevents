<% if current_user %>
    Привет, <b><%= current_user.name %></b>
    <%= link_to 'Профиль', user_path(current_user) %>
    <%= link_to 'Входящие сообщения', inbox_path %>
    <%= link_to 'Отправленные сообщения', sentbox_path %>
    <%= link_to 'Выйти', logout_path %>
<% else %>
    Войти с помощью:
    <ul>
        <li><%= link_to 'ВК', '/auth/vkontakte' %></li>
        <li><%= link_to 'Фейсбук', '/auth/facebook' %></li>
        <li><%= link_to 'Твиттер', '/auth/twitter' %></li>
    </ul>
    <p>
      <strong>Не используете эти сервисы?</strong>
      Войдите, или <%= link_to 'создайте аккаунт', new_identity_path %>.
      <%= form_tag '/auth/identity/callback' do %>
        <div class="field">
          <%= label_tag :auth_key, 'Email' %><br>
          <%= text_field_tag :auth_key %>
        </div>
        <div class="field">
          <%= label_tag :password, 'Пароль' %><br>
          <%= password_field_tag :password %>
        </div>
        <div class="actions"><%= submit_tag 'Войти' %></div>
    <% end %>
    </p>
<% end %>
<br/>
