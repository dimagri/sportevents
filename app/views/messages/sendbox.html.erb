<h2>Отправленные сообщения</h2>

<table>
  <tr>
    <th>Получатель</th>
    <th>Тема</th>
    <th>Отправлено</th>
  </tr>
  <% for message in @messages %>
    <tr>
      <td><%= message.recipients.map(&:login).to_sentence %></td>
      <td><%= link_to h(message.subject), sent_path(message) %></td>
      <td><%= distance_of_time_in_words(message.created_at, Time.now) %> ago</td>
    </tr>
  <% end %>
</table>
