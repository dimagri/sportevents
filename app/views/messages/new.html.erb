<h1>Новое сообщения</h1>
<% form_for :message, :url => {:controller => "messages", :action => "create"} do |f| %>

  <p>
    To:<br />
    <select name="message[to][]">
      <%= options_from_collection_for_select(User.find(:all), :id, :login, @message.to) %>
    </select>
  </p>

  <p>Тема: <%= f.text_field :subject %></p>
  <p>Текст сообщения:<br /> <%= f.text_area :body %></p>
  <p><%= submit_tag "Отправить" %></p>
<% end %>