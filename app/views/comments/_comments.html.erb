<% if @comments.any? %>
    <b>Комментарии</b><br/>
    <hr/>
    <% # TODO add date %>
    <% @comments.reverse.each do |comment| %>
        <br/>
        <b>Добавил</b>: <%= comment.user.name %><br/>
        <%= comment.body %><br/><hr/>
    <% end %>
<% else %>
    <b>Комментариев нет</b>
<% end %>


