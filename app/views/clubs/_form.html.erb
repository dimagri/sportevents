<div class="form">
  <%= form_for(@club) do |f| %>

      <%= render 'locations/add_location' %>

      <div id="location">
      </div>

      <div class="field">
        <%= f.label 'Название секции' %><br>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label 'Категория' %><br>
        <%= collection_radio_buttons(:club, :club_type_id, ClubType.all, :id, :name) %>
      </div>

      <div class="field">
        <%= f.label 'Описание' %><br>
        <%= f.text_area :description %>
      </div>

      <div class="field">
        <%= f.label 'Стоимость' %><br>
        <%= f.text_field :price %>
      </div>

      <div class="field">
        <%= f.label 'Контактный номер' %><br>
        <%= f.text_field :phone %>
      </div>

      <div class="actions">
        <%= f.submit 'ОК'%>
      </div>
  <% end %>
</div>